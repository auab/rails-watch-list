


<div class="container-fluid main-poster mb-5">
  <div>
    <h1>Movie List App</h1>
    <h4>Save. Watch. Enjoy.</h4>
    <%= link_to 'Add List', new_list_path, class:'add-list-button' %>
  </div>
  <span><%= image_tag "cinema.png" %></span>

</div>
<hr style='color:white'>
<h1>Movie Lists</h1>

<ul>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-12 col-md-6 col-xl-4">
        <%= link_to list_path(list) do %>
          <div class="list-card">
            <li>
              <%= image_tag "camera.jpg" %>
              <p class='mt-3'><%= list.name.upcase %></p>
            </li>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</ul>
